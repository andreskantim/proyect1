{
  "experiment_name": "case_c_crypto_t4_diagnostic",
  "description": "Diagnostic test on T4: better config, more epochs, detailed metrics",

  "data": {
    "start_date": "2019-01-01",
    "end_date": null,
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "cache_dir": "data/crypto_multi_cache",
    "use_cache": true
  },

  "tokenizer": {
    "vocab_size": 512,
    "n_features": 4
  },

  "model": {
    "n_layers": 6,
    "d_model": 384,
    "n_heads": 8,
    "d_ff": 1536,
    "context_length": 256,
    "n_steps_pred": 5,
    "dropout": 0.1,
    "attention_dropout": 0.1
  },

  "training": {
    "epochs": 10,
    "batch_size": 16,
    "learning_rate": 3e-4,
    "weight_decay": 0.1,
    "grad_clip": 1.0
  }
}
