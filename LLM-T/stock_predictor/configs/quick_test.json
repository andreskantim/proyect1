{
  "experiment_name": "market_gpt_quick_test",
  "description": "Quick test configuration for development and debugging",

  "data": {
    "use_full_history": false,
    "start_date": "2024-01-01",
    "end_date": "2024-02-01",
    "interval": "1m",
    "train_ratio": 0.8,
    "val_ratio": 0.1,
    "use_cache": true
  },

  "tokenizer": {
    "vocab_size": 256,
    "n_features": 4,
    "min_return": -0.1,
    "max_return": 0.1
  },

  "model": {
    "n_layers": 4,
    "d_model": 256,
    "n_heads": 4,
    "d_ff": 1024,
    "context_length": 512,
    "n_steps_pred": 5,
    "dropout": 0.1,
    "attention_dropout": 0.1
  },

  "training": {
    "initial": {
      "epochs": 3,
      "batch_size": 16,
      "learning_rate": 1e-3,
      "warmup_steps": 100,
      "weight_decay": 0.1,
      "grad_clip": 1.0,
      "alpha": 0.7
    },
    "walkforward": {
      "window_size": 1440,
      "fine_tune_epochs": 2,
      "batch_size": 16,
      "learning_rate": 1e-4,
      "freeze_layers": 2,
      "alpha": 0.7
    }
  },

  "optimization": {
    "mixed_precision": false,
    "gradient_checkpointing": false,
    "compile_model": false
  }
}
