{
  "experiment_name": "market_gpt_bitcoin_small",
  "description": "GPT-2 Small scale model (~100M params) for Bitcoin 1-minute prediction",

  "data": {
    "use_full_history": true,
    "start_date": "2017-08-17",
    "end_date": null,
    "interval": "1m",
    "train_ratio": 0.85,
    "val_ratio": 0.05,
    "use_cache": true
  },

  "tokenizer": {
    "vocab_size": 1024,
    "n_features": 4,
    "min_return": -0.1,
    "max_return": 0.1
  },

  "model": {
    "n_layers": 12,
    "d_model": 768,
    "n_heads": 12,
    "d_ff": 3072,
    "context_length": 2048,
    "n_steps_pred": 10,
    "dropout": 0.1,
    "attention_dropout": 0.1
  },

  "training": {
    "initial": {
      "epochs": 10,
      "batch_size": 8,
      "learning_rate": 6e-4,
      "warmup_steps": 2000,
      "weight_decay": 0.1,
      "grad_clip": 1.0,
      "alpha": 0.7
    },
    "walkforward": {
      "window_size": 10080,
      "fine_tune_epochs": 3,
      "batch_size": 8,
      "learning_rate": 1e-5,
      "freeze_layers": 6,
      "alpha": 0.7
    }
  },

  "optimization": {
    "mixed_precision": true,
    "gradient_checkpointing": true,
    "compile_model": false
  }
}
